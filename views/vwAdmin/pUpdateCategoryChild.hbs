<main class="admin-page">
    <div class="content">
        <div class="box">
            <form method="POST" class="frm">
                <div>
                    <h3 class="text-danger">CẬP NHẬT CHUYÊN MỤC CON</h3>
                </div>
                <div class="form_group">
                    <label for="txtCatChildID" class="text-primary">ID: </label>
                    <input id="txtCatChild_ID" name="CatChild_ID" class="form-control" type="text"
                        value="{{this.categorychild.CatChild_ID}}" readonly>
                    <label for="txtCatChildName" class="text-primary">Tên chuyên mục con: </label>
                    <input id="txtCatChildName" name="CatChildName" class="form-control" type="text"
                        value="{{this.categorychild.CatChildName}}">
                </div>
                <div class="submit-form">
                    <button type="submit" class="btn btn-primary"
                        formaction="/Admin/UpdateCategory/UpdateCategoryChild/update">
                        Cập nhật
                    </button>
                    <a type="submit" class="btn btn-danger" href="/Admin/UpdateCategory/{{this.categorychild.CatID}}"
                        role="button">
                        Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</main>