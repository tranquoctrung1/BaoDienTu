<div class="container">
    <div class="box">
        <form method="POST" class="frm">
            <div>
                <h3 class="text-danger">Cập nhật Thông tin</h3>
            </div>
            <div class="form_group">
                <label class="text-primary" for="txtCatName">Tên chuyên mục: </label>
                <input id="txtCatName" name="CatName" class="form-control" type="text">
            </div>
            <div class="form_group">
                <label class="text-primary" for="txtManager">Người quản lý chuyên mục: </label>
                <select class="custom-select" id="txtManager" name="Manager">
                  {{#each LoadUser}}
                  <option value="{{UserID}}">{{Name}}</option>
                  {{/each}}
                </select>
            </div>
            <div class="submit-form">
                <button type="submit" class="btn btn-primary" formaction="/Admin/paddNewCategory/addNewCategory">
                    Thêm mới
                </button>
                <a type="submit" class="btn btn-danger" href="/Admin" role="button">
                    Hủy
                </a>
            </div>
        </form>
    </div>
</div>