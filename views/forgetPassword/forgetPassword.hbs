{{#section 'js'}}
<script src="/js/changePassword.js"></script>
{{/section}}

<div class="forget-password-form">
    <form action="" method="post" id="changePasswordForm" onsubmit="return checkFormChangePassword()">
        <h2> Đổi mật khẩu</h2>
        <small class="form-text  text-danger" id="err">{{err}}</small>
        <div class="form-group">
            <label for="oldPassword">Mật khẩu cũ </label>
            <input type="password" class="form-control" id="oldPassword" name="oldPassword">
        </div>
        <div class="form-group">
            <label for="newPassword">Mật khẩu mới </label>
            <input type="password" class="form-control" id="newPassword" name="newPassword">
        </div>
        <div class="form-group">
            <label for="repeatNewPassword">Nhập lại mật khẩu mới </label>
            <input type="password" class="form-control" id="repeatNewPassword" name="repeatNewPassword">
        </div>

        <div class="button-handle-form">
            <div class="form-group row">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Thay đổi</button>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-10">
                    <button class="btn btn-danger"><a href="javascript: window.history.back()"> Hủy</a></button>
                </div>
            </div>
        </div>
    </form>
</div>